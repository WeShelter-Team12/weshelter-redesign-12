---
import Navbar from "../components/Navbar.astro";

const { title, activePage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://use.typekit.net/djj7fhm.css" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="https://weshelter.dk/wp-content/themes/weshelter/images/favicon.ico"
    />
    <title>{title ? `${title} | WeShelter` : "WeShelter"}</title>
  </head>
  <body>
    <Navbar activePage={activePage} />

    <main>
      <slot />
    </main>

    <footer>
      <slot name="Footer" />
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  footer {
    background-color: #1f325a;
  }
</style>
