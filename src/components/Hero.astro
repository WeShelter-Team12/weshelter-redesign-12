<div class="bg-farve">
  <section class="hero-container">
    <article class="hero-text">
      <h1>VI HAR BRUG FOR DIG!</h1>
      <h2>GØR EN FORSKEL</h2>
    </article>

    <article class="heroimg-container">
      <img class="heroimg" src="/heroimage.webp" alt="Heroimage" />
    </article>

    <div class="arrow-button">
      <img class="arrowsimg" src="/arrows.webp" alt="arrows" />
      <button>BLIV FRIVILLIG</button>
    </div>
  </section>
</div>

<section class="sideto">
  <article class="hvem-container">
    <h3>HVEM ER VI?</h3>
    <h4>TIL KAMP MOD <strong>HJEMLØSHED</strong>,<strong>ENSOMHED</strong> OG <strong>PSYKISK MISTRIVSEL</strong></h4>
  </article>
  <article class="linjeogikon">
    <div class="lines-container">
      <img src="/blaalinjer.webp" alt="lines-side" />
    </div>

    <div class="ikon-container">
      <div class="haender-item">
        <img class="ikon" src="/haenderikon.webp" alt="Haender med Hjerte" />
      </div>
      <div class="personer-item">
        <img class="ikon" src="/personerikon.webp" alt="Personer" />
      </div>
      <div class="haender2-item">
        <img class="ikon" src="/haender2ikon.webp" alt="Haender med Hjerte" />
      </div>
    </div>
  </article>
</section>

<style>
  .ikon-container {
    display: flex;
    justify-content: space-around;
    padding: 15px 20px;
    position: relative;
    top: 30px;
  }

  .ikon {
    max-width: 200px;
    width: 95%;
    height: auto;
  }

  .personer-item {
    margin: 0 auto;
  }

  .haender-item {
    padding-left: clamp(10px, 6vw, 100px);
  }

  .haender2-item {
    padding-right: clamp(10px, 6vw, 100px);
  }
  .sideto {
    background-color: #fffcf6;
    min-height: 100vh;
  }

  div.bg-farve {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(131, 156, 211, 0.7) 0%, rgba(255, 252, 246, 0.85) 100%);
    min-height: 100vh;
  }
  h1 {
    font-family: "anton", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 6rem;
    color: white;
    letter-spacing: 3.3px;
  }

  h3 {
    font-family: "anton", sans-serif;
    font-weight: 400;
    font-style: normal;

    color: #1f325a;
    letter-spacing: 3.3px;
  }

  .lines-container {
    display: flex;
    justify-content: center; /* Centrerer billedet */
    align-items: center;
    max-width: 100%; /* Forhindrer for stor bredde */
    height: auto;
    overflow: hidden; /* Sikrer, at billedet ikke stikker udenfor */
    margin-top: 10px;
    position: absolute;
  }

  .lines-container img {
    display: inline-block; /* Sørger for, at billedet kun fylder sit eget indhold */
    width: auto; /* Undgår at billedet strækker sig */
    max-width: 95%; /* Sørger for, at det ikke bliver større end sit indhold */
    height: auto; /* Bevarer proportioner */
    align-self: center;
  }
  h4 {
    font-family: "Mulish", sans-serif;

    font-weight: 400;
    color: #1f325a;
    margin-top: 50px;
    letter-spacing: 1.08px;
  }

  .hvem-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hvem-container h3 {
    font-size: clamp(2rem, 5vw, 4rem); /* Mindst 2rem, max 3rem */
  }

  .hvem-container h4 {
    font-size: clamp(1rem, 1.5vw, 1.5rem); /* Mindst 1rem, max 1.3rem */
  }

  .arrow-button {
    display: flex;
    flex-direction: column;
    max-width: 300px;
    align-items: center;
  }

  .hero-text {
    position: relative;
    z-index: 2;
    margin-top: 140px;
    max-width: 90%;
    z-index: 2;
    margin-right: 100px;
  }

  h2 {
    font-family: "anton", sans-serif;
    font-weight: 400;
    font-size: 3rem;
    letter-spacing: 3.3px;
    font-style: normal;
    color: white;
  }

  button {
    border: none;
    padding: 30px 50px;
    margin-top: 30px;
    border-radius: 16px;
    font-size: 1.5rem;
    letter-spacing: 1.08px;
    box-shadow: 4px -2px 9px 1px rgba(255, 255, 255, 0.12);
    background-color: #eda831;
    color: white;
    font-family: "Mulish", sans-serif;
    font-weight: 400;
  }

  button:hover {
    background-color: #1f325a;
    cursor: pointer;
  }

  .hero-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    position: relative;
    margin-left: 50px;
    max-width: 1200px;
    padding: 15px 20px;
  }

  .heroimg {
    max-width: 100%;
    width: 650px;
    height: auto;
    position: absolute;
    right: -100px;
    top: -20px;
    z-index: 1;
  }

  .arrowsimg {
    margin-top: 30px;
    width: 100%;
    max-width: 200px;
  }

  @media (max-width: 600px) {
    .hero-container {
      flex-direction: column; /* Bytter rækkefølgen */
      text-align: center;
      align-items: center;
      gap: 20px;
      margin: 0 auto;
    }

    .lines-container img {
      display: none;
    }

    .heroimg-container {
      margin: 0 auto;

      align-items: center;
      text-align: center;
    }

    .hero-text {
      position: relative;
      margin-top: 50px;
      margin: 0 auto;
      top: 20px;
      font-size: 1.8rem;
      text-align: center;
    }

    .heroimg {
      width: 100%;
      position: relative;
      margin: 0 auto;
      z-index: 1;
      right: 0; /* Sørger for, at billedet ikke ryger ud af skærmen */
      left: 60%; /* Skubber billedet til midten */
      transform: translateX(-50%); /* Justerer billedet præcist til midten */
      margin-top: 20px;
      max-width: 400px;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    button {
      padding: 30px 50px;
      font-size: 1rem;
      margin-top: 10px;
    }

    .arrowsimg {
      margin-top: 5px;
      width: 100px;
    }
  }

  @media (min-width: 801px) and (max-width: 1072px) {
    h1 {
      font-size: 4rem;
    }

    h2 {
      font-size: 3rem;
    }

    .hero-container {
      flex-direction: column;
    }

    .heroimg {
      width: 600px;
      top: 40px;
    }

    button {
      padding: 30px 50px;
      font-size: 1rem;
      z-index: 5;
    }
  }

  @media (min-width: 601px) and (max-width: 800px) {
    .hero-container {
      flex-direction: column;
      text-align: center;
      align-items: center;
      gap: 20px;
      margin: 0 auto;

      padding-bottom: 0px;
    }

    .lines-container img {
      display: none;
    }

    button {
      padding: 30px 50px;
      font-size: 1rem;
      margin-top: 10px;
    }

    .arrowsimg {
      margin-top: 10px;
    }

    .heroimg-container {
      margin: 0 auto;
      align-items: center;
      text-align: center;
    }

    h1 {
      font-size: 3.5rem;
    }

    h2 {
      font-size: 3rem;
    }

    .hero-text {
      position: relative;
      margin-top: 50px;
      margin: 0 auto;
      top: 0px;

      text-align: center;
    }

    .heroimg {
      width: 90%;
      position: relative;
      margin: 0 auto;
      z-index: 1;
      right: 0; /* Sørger for, at billedet ikke ryger ud af skærmen */
      left: 60%; /* Skubber billedet til midten */
      transform: translateX(-50%); /* Justerer billedet præcist til midten */
      margin-top: 10px;
      max-width: 400px;
    }

    .arrow-button {
      margin: 0 auto;
    }

    .arrowsimg {
      width: 150px;
    }
  }
</style>
