---
const { activePage } = Astro.props;
---

<nav class="navbar">
  <div class="logo">
    <a href="/">WeShelter</a>
  </div>
  <ul class="nav-links">
    <li class={activePage === "bliv-frivillig" ? "active" : ""}>
      <a href="/bliv-frivillig">BLIV FRIVILLIG</a>
    </li>
    <li class={activePage === "stoet" ? "active" : ""}>
      <a href="/stoet">STØT</a>
    </li>
    <li class={activePage === "om" ? "active" : ""}>
      <a href="/om">OM</a>
    </li>
  </ul>
  <div class="burger-menu">
    <input type="checkbox" id="menu-toggle" />
    <label for="menu-toggle" class="menu-icon">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <ul class="menu">
      <li class={activePage === "bliv-frivillig" ? "active" : ""}>
        <a href="/bliv-frivillig">BLIV FRIVILLIG</a>
      </li>
      <li class={activePage === "stoet" ? "active" : ""}>
        <a href="/stoet">STØT</a>
      </li>
      <li class={activePage === "om" ? "active" : ""}>
        <a href="/om">OM</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    font-family: "Mulish", sans-serif;
    font-weight: 400;
    border-bottom: 1px solid #ddd;
  }

  .logo a {
    font-size: 2rem;
    color: white;
    text-decoration: none;
  }

  .nav-links {
    list-style: none;
    font-size: 1.2rem;
    display: flex;
    gap: 100px;
  }

  .nav-links li a {
    position: relative;
    text-decoration: none;
    color: white;
    padding-bottom: 5px;
  }

  .nav-links li a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1.5px;
    background-color: white;
    transform: scaleX(0);
    transition: transform 0.1s ease-in-out;
  }

  .nav-links li a:hover::after {
    transform: scaleX(1);
  }
  /*BURGERMENU*/
  .burger-menu {
    position: relative;
  }

  .menu-icon {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .menu-icon span {
    display: block;
    height: 4px;
    background: black;
    border-radius: 2px;
    transition: all 0.3s ease-in-out;
  }

  #menu-toggle {
    display: none;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  #menu-toggle:checked + .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .menu {
    display: none;
    list-style: none;
    margin: 0;
    padding: 20px;
    background: #99bff2;
    color: white;
    position: absolute;
    top: 249%;
    left: -450%;
    text-align: center;
    font-size: 25px;
    z-index: 5;
    border-radius: 8px;
  }

  #menu-toggle:checked ~ .menu {
    display: block;
  }

  .menu li {
    padding: 15px;
  }

  .menu a {
    text-decoration: none;
    color: white;
    transition: color 0.3s;
  }

  .menu a:hover {
  }
  .menu a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1.5px;
    background-color: white;
    transform: scaleX(0);
    transition: transform 0.1s ease-in-out;
  }
  .menu li a:hover::after {
    transform: scaleX(1);
  }
  @media (max-width: 720px) {
    .nav-links {
      font-size: 1rem;

      gap: 20px;
    }

    .logo a {
      font-size: 1.5rem;
    }
  }
  @media (min-width: 801px) {
    .burger-menu {
      display: none;
    }
  }
  @media (max-width: 801px) {
    .nav-links {
      display: none;
    }
  }
</style>
